<Window x:Class="Sharpsaver.Views.ScreensaverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sharpsaver.Views"
        mc:Ignorable="d"        
        Top="0" Left="0" WindowState="Maximized" WindowStyle="None" WindowStartupLocation="Manual" ShowInTaskbar="False" ResizeMode="NoResize" AllowsTransparency="True"
        x:Name="ScreensaverWindow"
        Title="Screensaver" 
        Background="Transparent"
        MouseMove="Window_MouseMove" 
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    <Viewbox Stretch="Fill">
        <Canvas Width="{Binding ElementName=ScreensaverWindow, Path=ActualWidth}"
                Height="{Binding ElementName=ScreensaverWindow, Path=ActualHeight}"
                x:Name="Field">
            <TextBox x:Name="MagicNumber"
                     Background="Transparent"
                     BorderBrush="Gray"
                     Panel.ZIndex="9"
                     Visibility="Hidden"
                     Text="1200-00"/>
        </Canvas>
    </Viewbox>
</Window>
